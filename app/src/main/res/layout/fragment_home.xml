<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:fillViewport="true"
    android:background="@drawable/ress"

    >
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/your_root_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:maxHeight="50dp"
                android:maxWidth="50dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/cloud5"
                android:layout_marginTop="-50dp"
                android:layout_width="450dp"
                android:layout_height="270dp"
                android:alpha="0.8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/raincloud"
                />
            <ImageView
                android:id="@+id/stars"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/star4"/>
            <ImageView
                android:id="@+id/stars2"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stars"
                android:src="@drawable/star4"/>
            <ImageView
                android:id="@+id/cloud1"
                android:layout_marginTop="120dp"
                android:layout_width="400dp"
                android:layout_height="270dp"
                android:alpha="0.7"
                android:layout_marginEnd="-350dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/cli"/>
            <ImageView
                android:id="@+id/cloud2"
                android:layout_marginTop="30dp"
                android:layout_width="400dp"
                android:layout_height="270dp"
                android:alpha="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/cl2"/>
            <ImageView
                android:id="@+id/cloud3"
                android:layout_marginTop="180dp"
                android:layout_width="220dp"
                android:layout_height="270dp"
                android:alpha="0.8"
                android:layout_marginLeft="-10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/cli8"
                />

            <ImageView
                android:id="@+id/fog"
                android:layout_marginTop="0dp"
                android:layout_width="620dp"
                android:layout_height="470dp"
                android:alpha="0.8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/fog"
                />
            <ImageView
                android:id="@+id/cloud4"
                android:layout_marginTop="320dp"
                android:layout_width="320dp"
                android:layout_height="220dp"
                android:alpha="0.7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/cloud4"
                />

            <TextView
                android:id="@+id/txtWorldTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="44sp"
                android:textStyle="bold"
                android:fontFamily="@font/light"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txtForecastDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:letterSpacing="0.3"
                android:fontFamily="@font/light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtForecastDay2" />
            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="hshhs"
                android:textStyle="bold"
                android:letterSpacing="0.3"
                android:fontFamily="@font/light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtForecastDay1" />
            <TextView
                android:id="@+id/txtForecastDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textColor="@color/white"
                android:textSize="55sp"

                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtWorldTime" />
            <TextView
                android:id="@+id/txtWorldTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="40sp"
                android:fontFamily="@font/light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/day" />


            <ImageView
                android:id="@+id/conditionIcon"
                android:layout_width="55dp"
                android:layout_marginTop="6dp"
                android:layout_height="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtWorldTime2"
                />
            <TextView
                android:id="@+id/txtWorldTime4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="6dp"
                android:textSize="25sp"
                android:fontFamily="@font/light"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conditionIcon"
                />

            <Space
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/txtWorldTime4"/>


            <LinearLayout
                android:id="@+id/weatherIcon3"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/opacity"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:visibility="gone"
                android:layout_marginBottom="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space1"
                >
                <LinearLayout
                    android:id="@+id/weatherIcon2"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="5-Day Forecast"
                        android:textSize="20sp"


                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="12dp"/>

                    <TextView
                        android:id="@+id/textMaxTemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Max °C"
                        android:textSize="18sp"
                        android:textColor="@color/white"

                        android:padding="8dp"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:id="@+id/textMinTemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Min °C"
                        android:textSize="18sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <!-- Table header row -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"


                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/weatherIcon7"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/weatherIcon3"
                android:layout_margin="10dp"

                >

                <LinearLayout
                    android:id="@+id/sunn"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/opacity3"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherIcon3"
                    >

                    <TextView
                        android:id="@+id/sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sunrise"
                        android:textSize="16sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/sunrise"
                        android:layout_marginLeft="50dp"/>
                    <TextView
                        android:id="@+id/sunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sunset"
                        android:layout_marginTop="25dp"
                        android:textSize="16sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/sunset"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/details"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/opacity2"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weatherIcon3"
                    >

                    <TextView
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"

                        android:paddingVertical="8dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@+id/weatherIcon3"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <com.example.weather.RainView
        android:id="@+id/rainView"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        />
    <com.example.weather.SnowView
        android:id="@+id/snowView"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        />


</RelativeLayout>